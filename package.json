{
  "name": "avar-assistant-app",
  "version": "1.0.0",
  "description": "AVAR (Assistant Video Assistant Referee) Assistant App - A real-time football match timekeeping and event logging application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "xstate": "^5.20.1",
    "dexie": "^4.0.8"
  },
  "devDependencies": {
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "@typescript-eslint/eslint-plugin": "^8.18.3",
    "@typescript-eslint/parser": "^8.18.3",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/web-worker": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "fake-indexeddb": "^6.0.0",
    "jsdom": "^26.0.0",
    "tailwindcss": "^4.0.0-alpha.36",
    "typescript": "^5.7.4",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "football",
    "soccer",
    "timekeeping",
    "avar",
    "referee",
    "react",
    "typescript",
    "vite",
    "xstate"
  ],
  "author": "Adam Isherwood",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  }
}
